<body class="h-100">
  <head>
    <%- include('partials/_header') %>
  </head>
   <div class="container h-100" >
      <div class="row h-100 justify-content-center align-items-center" style="width: 75%; padding: 40px 20px;">
          <div class="col-10 col-md-8 col-lg-6" >
             <!-- Form -->
              <form class="form-signin justify-content-center align-items-center"   method="POST" action="/register"> 
                <h1>Create an Account</h1>
                <!-- Input fields -->
                <div class="form-group " >
                     <label for="emal">Email:</label>
                     <input class="form-control email" type="text" name="email"  placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input class="form-control password" type="text" name="password"  placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary btn-customized">Register</button>
                <!-- End input fields -->
             </form>
            <!-- Form end -->
          </div>
      </div>
   </div>
